{
  "name": "on-lang",
  "version": "0.1.0",
  "description": "ONLang (Object Notation Language) is a markup-style programming language designed to define and interact with objects in a user-friendly and intuitive way. It is built on top of TypeScript, making it easy to use and extend.",
  "author": {
    "url": "onlang-org <https://github.com/onlang-org>",
    "name": "ONLang.org"
  },
  "homepage": "https://onlang.js.org/",
  "license": "MIT",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onlang-org/onlang.git"
  },
  "scripts": {
    "build": "npm run format && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:cli": "ts-node src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:cov": "jest --runInBand --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "onlang": "ts-node ./src/main.ts",
    "pack": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz"
  },
  "bin": {
    "onlang": "./scripts/index.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@onlang-org/onst": "^1.2.4",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0",
    "nest-commander": "^3.12.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.3.3",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.4.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nest-commander-testing": "^3.3.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "onlang",
    "compiler",
    "object",
    "typescript",
    "HLL",
    "parser",
    "schema",
    "json",
    "markup",
    "language",
    "transpiler",
    "ajv",
    "onst"
  ],
  "files": [
    "dist/**/*.js"
  ]
}
